<!-- 
    MAKE A CARD FOR EVERY SHOP
    USE BOOTSTRAP
    First render all the shops, we will later add in the filtering logic
-->
<%- include("partials/header.ejs") %> 
<style>
    /* STYLING HERE */
    .card {
        background-color: #fff;
        border: 1px solid rgba(0, 0, 0, 0.125);
        border-radius: 0.25rem;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    .card-title, .card-subtitle {
        text-align: center;
    }
    .form-control {
        margin: 10px auto;
    }
</style>

<div class="py-5">
    <div class="container">
        <div class="row">
            <% for(let i=0; i<enquiries.length; i++){ %>
                <div class="col-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title text-muted">Customer Name</h6>
                            <h5 class="card-subtitle mb-2"><%= enquiries[i].customerName %></h5>
                            <h6 class="card-title text-muted">Stays at</h6>
                            <h5 class="card-subtitle mb-2"><%= enquiries[i].location %></h5>
                            <h6 class="card-title text-muted">The enquiry</h6>
                            <h5 class="card-subtitle mb-4"><%= enquiries[i].enquiry %></h5>
                            <form action="/customer/accept/<%=enquiries[i].customerName%>/<%=i%>" method="POST" class="form-group">
                                <button class="btn btn-block btn-outline-success">Accept!</button>
                            </form>
                            <form action="/customer/reject/<%=enquiries[i].customerName%>/<%=i%>" method="POST" class="form-group">
                                <button class="btn btn-block btn-outline-danger">Decline</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>